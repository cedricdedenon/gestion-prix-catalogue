{% extends 'base.html.twig' %}

{% block title %}Ajout d'une règle {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="container my-5">
	<h1>Formulaire de création d'une régle</h1>
</div>

<div class="container">
   {{ form_start(form) }}
   <div class="form-group">
   		 {{ form_widget(form.rule_expression) }}
   </div>
   <div class="form-group">
   		 {{ form_widget(form.discount_percent) }}
   	</div>

    <div class="row">
        <div class="col-1 mr-4">
             {{ form_end(form) }}
        </div>
        <div class="col">
          <a class="btn btn-info" href= "{{ path('discountedrules') }}" title="Voir toutes les règles créées">Voir toutes les règles</a> 
      </div>
      </div>


</div>
{% endblock %}
